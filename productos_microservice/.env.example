# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://productos_user:productos_pass@localhost:5432/productos_db

# ===========================================
# Flask Configuration
# ===========================================
SECRET_KEY=tu-clave-secreta-aqui
PORT=5008

# ===========================================
# Redis Queue Configuration
# ===========================================
# URL base del microservicio Redis (expuesto vía HTTP)
REDIS_SERVICE_URL=http://localhost:5011

# Canal/topic para importaciones masivas
REDIS_IMPORT_CHANNEL=productos_import_csv

# ===========================================
# Upload Configuration (para sync uploads)
# ===========================================
MAX_CONTENT_LENGTH=5242880  # 5MB
UPLOAD_FOLDER=uploads

# ===========================================
# Worker Configuration
# ===========================================
# Umbral para decidir entre sync/async (número de filas)
UMBRAL_ASINCRONO=100

# Tamaño de lote para commits (número de productos por commit)
BATCH_SIZE=50
